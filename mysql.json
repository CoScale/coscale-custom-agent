#
# MySQL / MariaDB Configuration
#
{
    "Configuration": {
        #
        # 1. Performance monitoring of database queries
        # Uncomment one of the following:

        # Performance schema
        # "QUERY STATS":["true"], "TYPE":["PERFORMANCE SCHEMA"]

        # Slow log
        # "QUERY STATS":["true"], "TYPE":["SLOW QUERY"], "FILE": ["\"/var/log/mysql/slow.log\""]

        # Query data disabled
        # "QUERY STATS":["false"]


        #
        # 2. Monitoring of global metrics
        # Uncomment one of the following:

        # Host / port
        # "HOSTNAME":["localhost"], "PORT":["3306"],

        # Unix socket
        # "UNIX SOCKET":["/var/run/mysqld/mysqld.sock"],


        #
        # 3. Required configuration
        "USERNAME":[
            "username"
        ],
        "PASSWORD":[
            "password"
        ],
        "DATABASE":[
            "database"
        ]
    },
    "PluginType": "MYSQL"
},
